{
  "name": "quick-capture-web",
  "version": "1.0.0",
  "description": "AI-powered mobile-first knowledge capture PWA for Obsidian",
  "type": "module",
  "scripts": {
    "dev": "npm run tokens:build && vite dev --host",
    "build": "npm run tokens:build && vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./jsconfig.json",
    "format": "prettier --write .",
    "lint": "eslint .",
    "tokens:build": "style-dictionary build --config tokens/style-dictionary.config.js",
    "tokens:watch": "style-dictionary build --config tokens/style-dictionary.config.js --watch",
    "storybook": "npm run tokens:build && storybook dev -p 6006",
    "build-storybook": "npm run tokens:build && storybook build",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:contrast": "node scripts/a11y/check-contrast.js",
    "test:a11y": "npm run build-storybook && npm run test:contrast",
    "lighthouse": "lhci autorun",
    "lighthouse:collect": "npm run build-storybook && lhci collect",
    "lighthouse:assert": "lhci assert",
    "test:perf": "npm run lighthouse"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@lhci/cli": "^0.15.1",
    "@storybook/addon-a11y": "^8.6.14",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/svelte": "^8.6.14",
    "@storybook/sveltekit": "^8.6.14",
    "@sveltejs/adapter-vercel": "^6.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.8",
    "@vitest/ui": "^4.0.3",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.56.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^27.0.1",
    "json5": "^2.2.3",
    "lighthouse": "^12.8.2",
    "postcss": "^8.4.33",
    "prettier": "^3.1.1",
    "prettier-plugin-svelte": "^3.1.2",
    "storybook": "^8.6.14",
    "style-dictionary": "^5.1.1",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.3",
    "tailwindcss": "^3.4.1",
    "vite": "^5.0.11",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^4.0.3"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "idb": "^8.0.0",
    "lucide-svelte": "^0.548.0",
    "marked": "^16.4.1"
  }
}
